// This file should be placed on:
// ~/.config/Code/User/keybindings.json

// Place your shortcuts into the brackets to overwrite the default ones
[
	// moving editor areas
	{
		"key": "ctrl+q",
		"command": "workbench.action.toggleSidebarVisibility"
	},
	{
		"key": "ctrl+b",
		"command": "workbench.action.showWelcomePage"
	},
	{
		"key": "f5",
		"command": "workbench.action.reloadWindow",
		"when": "editorTextFocus"
	},
	{
		"key": "f5",
		"command": "workbench.action.reloadWindow",
		"when": "isDevelopment"
	},
	// Git shortcuts
	{
		"key": "ctrl+g",
		"command": "workbench.view.scm"
	},
	{
		"key": "ctrl+p z",
		"command": "git.checkout"
	},
	{
		"key": "ctrl+p ctrl+p",
		"command": "git.push"
	},
	{
		"key": "ctrl+p ctrl+l",
		"command": "git.stage"
	},
	{
		"key": "ctrl+shift+l ctrl+shift+l",
		"command": "git.unstage"
	},
	{
		"key": "ctrl+p ctrl+g",
		"command": "git.sync"
	},
	// moving editor content
	{
		"key": "ctrl+shift+c",
		"command": "editor.action.commentLine",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"key": "ctrl+shift+down",
		"command": "editor.action.moveLinesDownAction",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"key": "ctrl+shift+up",
		"command": "editor.action.moveLinesUpAction",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"key": "ctrl+shift+d",
		"command": "editor.action.copyLinesDownAction",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"key": "ctrl+t",
		"command": "workbench.action.files.newUntitledFile"
	},
	{
		"key": "ctrl+shift+k",
		"command": "editor.action.deleteLines",
		"when": "textInputFocus && !editorReadonly"
	},
	{
		"key": "ctrl+shift+a",
		"command": "editor.action.blockComment",
		"when": "editorTextFocus && !editorReadonly"
	},
	// Output shortcuts
	{
		"key": "ctrl+l",
		"command": "workbench.output.action.clearOutput"
	},
	{
		"key": "ctrl+shift+[Quote]",
		"command": "workbench.action.output.toggleOutput"
	},
	{
		"key": "ctrl+alt+m",
		"command": "markdown.showPreview",
		"when": "!notebookEditorFocused && editorLangId == 'markdown'"
	},
	{
		"key": "ctrl+e",
		"command": "workbench.view.explorer"
	},
	{
		"key": "ctrl+shift+e",
		"command": "-workbench.view.explorer"
	}
]
