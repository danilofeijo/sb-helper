// This file should be placed on:
// ~/.config/Code/User/settings.json

// Place your settings in this file to overwrite default and user settings.work
{
  // VSCode Settings
  "editor.rulers": [0],
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.lineNumbers": "on",
  "editor.lineHeight": 20,
  "editor.selectionHighlight": true,
  "editor.occurrencesHighlight": false,
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": true,
  "editor.wordBasedSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.renderControlCharacters": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.autoSave": "off",
  "files.exclude": {
    "**/node_modules": false,
    "**/.git": false
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "bash",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.tabs.enabled": false,
  "window.menuBarVisibility": "classic",
  "workbench.sideBar.location": "left",
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "simple-icons",
  "workbench.colorCustomizations": {
    "activityBarBadge.background": "#FF0000"
  },
  // Extensions Settings
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  
  "breadcrumbs.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "docBlocker.Author": "danilofeijo",
  "docBlocker.defaultTpl": "/** \n * @Author: {{author}} \n * @Date: {{createTime}} \n * @Desc: $0 \n */",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "open-in-browser.default": "chrome",
  "prettier.requireConfig": true,
  "git.autofetch": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false
  },
  "indentRainbow.colors": [
    "rgba(16,16,16,0.1)",
    "rgba(16,16,16,0.3)",
    "rgba(16,16,16,0.6)",
    "rgba(16,16,16,1.9)",
    "rgba(16,16,16,0.6)",
    "rgba(16,16,16,0.3)"
  ],
  "sonarlint.connectedMode.connections.sonarqube": [
    { "serverUrl": "https://sonarqube.mycompany.com", "token": "<generated from SonarQube account/security page>" },
  ],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,pt,pt_BR",
  "cSpell.logLevel": "Information",
  "cSpell.userWords": [
    "Administracao",
    "aplicacao",
    "bambole",
    "botao",
    "ceit",
    "Chainer",
    "CICD",
    "CODIGO",
    "Criacao",
    "Edicao",
    "mkdir",
    "mochawesome",
    "noreply",
    "runqa",
    "stefanoeb",
    "testid",
    "udemy",
    "unstage",
    "usuario",
    "Usuarios",
    "Utdv"
  ],
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ]
}
